<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/labelName"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_marginTop="108dp"
        android:text="Name:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="28dp"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <TextView
        android:id="@+id/labelSurname"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:text="Surname:"
        app:layout_constraintEnd_toEndOf="@+id/user_Surname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelName" />

    <EditText
        android:id="@+id/user_Surname"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="4dp"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279" />

    <TextView
        android:id="@+id/labelEmergencyNumber"
        android:layout_width="73dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:text="EmergencyContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelSurname" />


    <EditText
        android:id="@+id/user_email"
        android:layout_width="282dp"
        android:layout_height="51dp"
        android:layout_above="@id/user_password"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/labelEmail"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="111dp"
        android:layout_height="49dp"
        android:layout_above="@id/user_emergencyNumber"
        android:layout_marginTop="20dp"
        android:text="Password:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelEmergencyNumber" />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="286dp"
        android:layout_height="49dp"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/labelPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_emergencyNumber"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:inputType="phone"
        android:padding="15dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/labelEmergencyNumber"
        app:layout_constraintTop_toBottomOf="@+id/user_Surname"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="104dp"
        android:layout_height="44dp"
        android:layout_above="@id/user_emergencyNumber"
        android:layout_marginTop="28dp"
        android:text="Email:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelPassword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/registarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        app:layout_constraintBottom_toTopOf="@+id/labelName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="113dp"
        android:layout_height="45dp"
        android:layout_marginBottom="104dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="115dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/colorPrimary"/>



</androidx.constraintlayout.widget.ConstraintLayout>